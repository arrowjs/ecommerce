{% extends '_layout.twig' %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            {{ toolbar | safe }}
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="box box-solid box-primary">
                <div class="box-body">
                    <form id="edit-form" method="post">
                        <div class="form-group">
                            <label class="control-label">{{ __('m_users_backend_views_change_pass_old_pass') }}</label>
                            <input type="password" class="form-control" name="old_pass" id="old_pass">
                        </div>
                        <div class="form-group">
                            <label class="control-label">{{ __('m_users_backend_views_change_pass_new_pass') }}</label>
                            <input type="password" class="form-control" id="user_pass" name="user_pass">
                        </div>
                        <div class="form-group">
                            <label class="control-label">{{ __('m_users_backend_views_change_pass_confirm') }}</label>
                            <input type="password" class="form-control" id="confirm_pass">
                        </div>
                        <div class="margin-top-10">
                            <button type="submit" class="btn btn-danger">
                                {{ __('change') }}
                            </button>
                            <a href="/admin" class="btn btn-default">
                                {{ __('cancel') }} </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block jsExtends %}
    <script>
        var password = document.getElementById("user_pass")
                , confirm_password = document.getElementById("confirm_pass");

        function validatePassword() {
            if (password.value != confirm_password.value) {
                confirm_password.setCustomValidity("{{ __('m_users_backend_views_change_pass_validate_not_match') }}");
            } else {
                confirm_password.setCustomValidity('');
            }
        }

        password.onchange = validatePassword;
        confirm_password.onkeyup = validatePassword;
    </script>
{% endblock %}